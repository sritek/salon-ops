{
  "extends": "@salon-ops/config/tsconfig.node.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@prisma/client": [
        "./node_modules/.prisma/client"
      ]
    },
    "noImplicitAny": false,
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*",
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}