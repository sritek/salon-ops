{
    "version": 2,
    "installCommand": "cd ../.. && pnpm install",
    "buildCommand": "cd ../.. && pnpm turbo build --filter=@salon-ops/api",
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.ts"
        }
    ]
}