# ===========================================
# Salon Ops - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# See documentation: .cursor/rules/13-backend-implementation.mdc

# Application
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
APP_URL=http://localhost:3001

# Database (Docker defaults)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/salon_ops
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis (Docker defaults)
REDIS_URL=redis://localhost:6379

# JWT (generate a secure key for production)
JWT_SECRET=local-development-secret-key-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AWS (optional for local - use mocks)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=local-dev-key
AWS_SECRET_ACCESS_KEY=local-dev-secret
S3_BUCKET_NAME=salon-ops-local
# CDN_URL=https://cdn.salonops.com

# Payment Gateways (optional, loaded from DB per tenant)
# RAZORPAY_KEY_ID=rzp_test_xxx
# RAZORPAY_KEY_SECRET=xxx

# Messaging (optional, loaded from DB per tenant)
# GUPSHUP_API_KEY=xxx
# GUPSHUP_SOURCE_PHONE=919876543210
# MSG91_AUTH_KEY=xxx
# MSG91_SENDER_ID=SALONOP
# SENDGRID_API_KEY=SG.xxx

# Monitoring (optional for local)
# SENTRY_DSN=https://xxx@sentry.io/xxx
LOG_LEVEL=debug

# Feature Flags
ENABLE_ONLINE_BOOKING=true
ENABLE_MARKETING=true
